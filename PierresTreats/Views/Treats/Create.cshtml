@{
  Layout= "_Layout";
}

@model PierresTreats.Models.Treat

@if(ViewBag.ErrorMessage != null)
{
  <h1 style="color:red">@ViewBag.ErrorMessage</h1>
}
<h4>Add a new treat:</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.Label("Select a Flavor")
  @Html.DropDownList("FlavorId", null, string.Empty)
  
  <input type="submit" value="Add new treat">
}

<p>@Html.ActionLink("Back to treats", "Index")</p>