@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<h2>Add a treat</h2>

<h4>Add a treat with this flavor: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Select flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink($"Back to {Model.Name} details", "Details", new { treatId = Model.TreatId })</p>
<p>@Html.ActionLink("Back to list", "Index") </p>