@{
  Layout = "_Layout";
}
@using PierresTreats.Models;
@model List<PierresTreats.Models.Flavor>

<h1>Flavors</h1>

@if(@Model.Count == 0)
{
  <p>No Flavors available</p>
}

<ul>
  @foreach(Flavor flavor in Model)
  {
    <li>@flavor.Type</li>
  }
</ul>

<p>@Html.ActionLink("Add new flavor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
